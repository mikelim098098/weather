<% content_for :test do %>

<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                Menu
            </li>
            <li>
                <a href="/alerts">View Alerts</a>
            </li>
            <li>
                <a href="/alerts/new">Set Alerts</a>
            </li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                  <h1>Listing Alerts</h1>
                  <h5 id="notice"><%= notice %></h5>
                  <table>
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>City name</th>
                        <th>Alert time</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @alerts.each do |alert| %>
                        <tr>
                          <td><%= alert.title %></td>
                          <td><%= alert.city_name %></td>
                          <td><%= alert.alert_time.strftime("%I:%M%P") %> PST</td>
                          <!-- <td><%= link_to 'Show', alert %></td> -->
                          <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
                          <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>

                  <br>

                  <!-- <p><%= link_to 'New Alert', new_alert_path %></p> -->
                  <p><a href="#menu-toggle" class="btn" id="menu-toggle" id="footer">Toggle Menu</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>
<% end %>

